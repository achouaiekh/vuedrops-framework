//@import "colors.scss"
.pagination
  background-color cornflowerblue

.simple.pagination

  .pagination__item--active
    .pagination__link
      color white
      background-color cornflowerblue

  .pagination__more, .pagination__link, .pagination__navigation__link
    color rgba(0, 0, 0, .5)
    padding .2em .6em
    transition background-color .3s, color .3s

  .pagination__link, .pagination__navigation__link
    box-shadow 0 0 2px rgba(0, 0, 0, .5)
    &:hover
      background-color darkgrey
      box-shadow none

.circle.pagination
  .pagination__link
    border-radius 50%

.rounded.pagination
  .pagination__link, .pagination__navigation__link
    border-radius 4px

.dot.pagination

  .pagination__item
    position relative
    width 16px
    height 16px
    cursor pointer

  .pagination__more, .pagination__navigation__link
    width auto
    color rgba(255, 255, 255, 0.7)

  .pagination__link
    transition background-color .3s
    width 100%
    height 100%
    outline none
    border-radius 50%
    background-color rgba(255, 255, 255, 0.4)
    text-indent -999em /* make the text accessible to screen readers */
    cursor pointer
    position absolute

  .pagination__item--active
    .pagination__link
      background-color rgba(255, 255, 255, 0.8)

.dot.fillup.pagination
  .pagination__link
    overflow hidden
    background-color transparent
    box-shadow inset 0 0 0 2px white
    -webkit-transition background 0.3s ease
    transition background 0.3s ease

    &:after
      content ''
      position absolute
      bottom 0
      height 0
      left 0
      width 100%
      background-color #fff
      box-shadow 0 0 1px #fff
      -webkit-transition height 0.3s ease
      transition height 0.3s ease

    &:hover,
    &:focus
      background-color rgba(0, 0, 0, 0.2)

  .pagination__item--active
    .pagination__link:after
      height 100%

  .pagination__more, .pagination__navigation__link
    color #fff

/* Scale up */

.dot.scaleup.pagination
  .pagination__link
    transition transform 0.3s ease, background-color 0.3s ease

    &:hover, &:focus
      background-color white

  .pagination__item--active
    .pagination__link
      background-color white
      transform scale(1.5)

/* Stroke */

.dot.stroke.pagination
  .pagination__link
    box-shadow 0 0 0 2px rgba(255, 255, 255, 0)
    transition box-shadow 0.3s ease, background-color 0.3s ease

    &:hover, &:focus
      background-color white

  .pagination__item--active
    .pagination__link
      background-color transparent
      box-shadow 0 0 0 2px white

/* Fill in */

.dot.fillin.pagination
  .pagination__link
    background-color transparent
    box-shadow inset 0 0 0 2px white
    transition box-shadow 0.3s ease

    &:focus, &:hover
      box-shadow inset 0 0 0 2px rgba(255, 255, 255, 0.6)

  .pagination__item--active
    .pagination__link
      box-shadow inset 0 0 0 8px white

  .pagination__more, .pagination__navigation__link
    color #fff

/* Circle grow */

.dot.circlegrow.pagination
  .pagination__link
    overflow hidden
    background-color transparent
    box-shadow inset 0 0 0 2px white
    transition opacity 0.3s ease

    &:after
      content ''
      position absolute
      width 100%
      height 100%
      left 0
      border-radius 50%
      background-color #fff
      transform scale(0)
      transform-origin 50% 50%
      transition transform 0.3s ease

    &:hover, &:focus
      opacity 0.7

  .pagination__item--active
    .pagination__link:after
      transform scale(1)

/* Dot to stroke */

.dot.dotstroke.pagination
  .pagination__link
    background-color: transparent
    box-shadow inset 0 0 0 8px rgba(255, 255, 255, 0.5)
    transition box-shadow 0.3s ease

    &:hover, &:focus
      box-shadow inset 0 0 0 8px white

  .pagination__item--active
    .pagination__link
      box-shadow inset 0 0 0 2px white

/* Puff */

.dot.puff.pagination
  .pagination__link
    border 2px solid #fff
    transition border-color 0.3s ease

    &:after
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      visibility hidden
      background #c44d48
      border-radius 50%
      box-shadow 0 0 1px #c44d48
      opacity 0
      transform scale(3)
      transition opacity 0.3s ease, transform 0.3s ease, visibility 0s 0.3s

    &:hover, &:focus, &.active
      border-color #c44d48

  .pagination__item--active
    .pagination__link
      border-color #c44d48
      &:after
        visibility visible
        opacity 1
        transform scale(1)
        transition opacity 0.3s ease, transform 0.3s ease

  .pagination__more, .pagination__navigation__link
    color #fff

/* Fly in */

.dot.hop.pagination
  .pagination__link
    border 2px solid #c44d48
    background transparent

    &:after
      content ''
      width 100%
      height 100%
      position absolute
      left 0
      border-radius 50%
      visibility hidden
      background #fff
      opacity 0
      transform rotate(-100deg)
      transform-origin -200% 50%
      transition transform 0.3s ease 0.3s, opacity 0.3s ease, visibility 0s 0.3s ease

    &:focus
      background rgba(255, 255, 255, 0.2)

  .pagination__item--active
    .pagination__link:after
      visibility visible
      opacity 1
      transform rotate(0deg)
      transition transform 0.3s ease, opacity 0.3s ease

/* Fall */
.dot.fall.pagination
  .pagination__item
    &:after
      content ''
      position absolute
      width 100%
      height 100%
      visibility hidden
      opacity 0
      left 0
      background-color #c44d48
      border-radius 50%
      transform translateY(-200%)
      transition transform 0.3s ease, opacity 0.3s ease, visibility 0s 0.3s

    &:hover, &:focus
      .pagination__link
        background-color #fff

  .pagination__link
    transition transform 0.3s ease, opacity 0.3s ease, background-color 0.3s ease

  .pagination__item--active
    .pagination__link
      background-color #fff
      opacity 0
      transform translateY(200%)

    &:after
      opacity 1
      visibility visible
      transition transform 0.3s ease, opacity 0.3s ease
      transform translateY(0%)

/*** Ubax ***/

.dot.ubax.pagination
  .pagination__link
    border-radius: 0
    &:after
      top:0
      left: 0
      content: '';
      position: absolute;
      width: calc(100% - 4px);
      height: calc(100% - 4px);
      border: 2px solid transparent;
      background: rgba(255,255,255,.7);

  .pagination__item--active
    .pagination__link:after
      z-index: 10;
      border-color: #31312f;
      transform: scale3d(1.5,1.5,1);
      transition: transform 0.3s, background-color 0.3s, border-color 0.3s;

