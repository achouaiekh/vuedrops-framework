
.pagination
  padding .5em
  position relative
  display flex
  justify-content center
  align-items center
  text-align center

  &__item
    cursor pointer
    position relative
    margin-left .4em
    &:focus, &:hover
      outline none
      color $pagination-hover-color

  &__item--active
    color $pagination-active-color
    &:hover, &:focus
      color $pagination-hover-active-color

  &__item--disabled
    opacity .2
    pointer-events none

  &__more
    pointer-events none

  &-move
    transition transform 2.5s

  &-enter-active, &-leave-active
    transition: all 1s

  &-enter, &-leave-to
    opacity: 0
    transform: translateY(30px)

.pagination
  &__simple
    .pagination__item
      padding .2em
      border .05em solid rgba(0, 0, 0, .25)
      min-width 1.6em
      &:hover
        background-color $pagination-hover-color
        color inherit



    .pagination__item--active
      background-color $pagination-active-color
      border-color $pagination-active-color
      color white
      elevation(2)
      &:hover
        background-color $pagination-hover-active-color
        color white

    .pagination__more
      box-shadow none
      border none

  &.rounded
    .pagination__item
      border-radius .2em

  &.circle
    .pagination__item
      border-radius 50%

  &__dot
    .pagination__item
      height 1em
      width 1em

    .pagination__link
      transition background-color .3s
      top: 0
      left: 0
      width 100%
      height 100%
      outline none
      border-radius 50%
      background-color: currentColor
      text-indent -999em
      position absolute

  &__dot--scaleup
    .pagination__link
      transition transform 0.3s ease, background-color 0.3s ease

    .pagination__item--active
      .pagination__link
        transform scale(1.5)

  &__dot--ubax
    .pagination__link
      border-radius: 0
      &:after
        top: 0
        left: 0
        content: ''
        position: absolute
        width: calc(100% - 4px)
        height: calc(100% - 4px)
        border: 2px solid transparent
        background: rgba(255, 255, 255, 1)
        transform: scale3d(0, 0, 1)

    .pagination__item--active
      .pagination__link
        &:after
          z-index: 10
          border-color: currentColor
          transform: scale3d(1.5, 1.5, 1)
          transition: transform 0.3s, background-color 0.3s, border-color 0.3s

  &__dot--puff
    .pagination__link
      border 2px solid $pagination-active-color
      transition border-color 0.3s ease

      &:after
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        visibility hidden
        background $pagination-active-color
        border-radius 50%
        box-shadow 0 0 1px $pagination-hover-active-color
        opacity 0
        transform scale(3)
        transition opacity 0.3s ease, transform 0.3s ease, visibility 0s 0.3s

    .pagination__item--active
      .pagination__link
        border-color $pagination-hover-active-color
        &:after
          visibility visible
          opacity 1
          transform scale(1)
          transition opacity 0.3s ease, transform 0.3s ease

  &__dot--hop
    .pagination__link
      border 2px solid $pagination-hover-active-color
      &:after
        content ''
        width 100%
        height 100%
        position absolute
        left 0
        border-radius 50%
        visibility hidden
        background $pagination-active-color
        opacity 0
        transform rotate(-100deg)
        transform-origin -200% 50%
        transition transform 0.3s ease 0.3s, opacity 0.3s ease, visibility 0s 0.3s ease

    .pagination__item--active
      .pagination__link:after
        visibility visible
        opacity 1
        transform rotate(0deg)
        transition transform 0.3s ease, opacity 0.3s ease

